@import 'nib'
@import 'typographic'
@import 'styl/*'

/* normalize browser CSS */
normalize-html5()
normalize-base()

/* setting for Rupture breakpoints */
rupture.base-font-size = 1em
rupture.anti-overlap = 1px 0.0625em 0.0625rem
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'

/* generic html tags CSS styles */
html
  font-family: brandon-grotesque, sans-serif
  color: $primary-text

/* remove underline style for anchors */
a
  color: $dark-primary-color
  text-decoration: none

/* reset the margins & paddings for headings */
h1, h2, h3, h4, h5, h6
  margin-top: 0
  margin-bottom: 0
  padding-top: 10px
  padding-bottom: 10px

/* p tag styles */
p
  color: $secondary-text
  margin-top: 0
  margin-bottom: 0

/* remove dots & make inline-block for nav items display */
li
  list-style: none
  display: inline-block

hr
  border-color: $divider-color
  margin: 0
  padding: 0

/* make content starts with space on the left */
.align-left
  position: relative
  padding-left: 16px

/* top nav bar CSS styles */
.navbar
  background: #fff
  color: $text-color
  box-shadow:  0 3px 10px rgba(#000, 0.23)
  height: 4.8em
  width: 100%
  display: flex
  position: fixed
  z-index: 999

/* LHS of nav bar is logo-area */
.logo-area
  color: $primary-color
  font-family: Voga-Medium
  font-size: 3.7em
  letter-spacing: 0.07em
  fb(row,1,flex-start,center)
  width: 50%
  position: relative

.logo-png
  width: 45px
  height: 45px

/* RHS of nav bar is menu */
.menu
  letter-spacing: 0.035em
  fb(row,2,flex-end,center)
  width: 50%
  position: relative

/* menu-normal only displays above 600px */
.menu-normal
  color: $dark-primary-color
  position: relative
  padding: 0
  margin-top: 0
  margin-bottom: 0
  display: flex
  justify-content: flex-end
  li
    background-color: $light-primary-color
    width: 8em
    margin: 0
    display: flex
    justify-content: center
    a
      padding-top: 1.7em
      padding-bottom: 1.7em
      :hover
        color: $accent-color
  +below('s')
    hide()

/* menu-mobile only displays below 600px */
.menu-mobile
  padding-right: 16px
  +above('s')
    hide()

/* button for toggling mobile menu items */
.menu-toggle
  background: $accent-color
  box-shadow: 0 3px 10px rgba(#000, 0.23)
  width: 45px
  height: 45px
  border-radius: 50%
  display: block
  flex-direction: column
  position: relative
  border: none
  cursor: pointer
  transition: background 0.3s

.menu-toggle:focus
  outline: none

/* the bars for the menu toggle button */
.menu-toggle span
  background: $text-color
  height: 3px
  width: 25px
  border-radius: 1px
  display: block
  position: absolute
  top: 21px
  left: 10px

.menu-toggle span:before, .menu-toggle span:after
  background: $text-color
  height: 3px
  width: 25px
  border-radius: 1px
  display: block
  position: absolute
  left: 0
  content: ''

.menu-toggle span:before
  top: -9px

.menu-toggle span:after
  bottom: -9px

/* transition effects for the menu toggle button */
.menu-toggle span
  transition: background 0 0.3s

.menu-toggle span:before, .menu-toggle span:after
  transition-duration: 0.3s, 0.3s
  transition-delay: 0.3s, 0

.menu-toggle span:before
  transition-property: top, transform

.menu-toggle span:after
  transition-property: bottom, transform

.menu-toggle.active
  background: #fff

.menu-toggle.active span
  background: none

.menu-toggle.active span:before
  background: $accent-color
  top: 0
  transform: rotate(45deg)

.menu-toggle.active span:after
  background: $accent-color
  bottom: 0
  transform: rotate(-45deg)

.menu-toggle.active span:before, .menu-toggle.active span:after
  transition-delay: 0, 0.3s

/* mobile menu items CSS styles */
.menu-mobile-items
  background: rgba($dark-primary-color, 0.93)
  width: 200%
  margin: 0
  padding-left: 0
  display: flex
  flex-direction: column
  display: none
  visibility: hidden
  z-index: 99
  transition: visibility 2s ease
  position: absolute
  top: 4.8em
  left: -100%
  li
    color: $accent-color
    height: 3em
    display: flex
    align-items: center
    justify-content: center

.menu-mobile-items.show
  display: block
  visibility: visible
  transition: visibility 2s ease

main
  background: #fff
  position: relative
  top: 4.8em
  padding-bottom: 1em

.test-content
  background: #e91e63
  color: #fff
  width: 100%
  height: 15em
  position: relative
  top: 4.8em

footer
  background: #607d8b
  color: $primary-text
  width: 100%
  height: 15em
  position: relative
  top: 4.8em

.jumbotron
  width: 100%
  height: 30em
  background: url("../img/jumbotron.png") no-repeat bottom center
  background-color: $primary-color
  display: flex
  justify-content: center
  h1
    padding-top: 2.5em
    font-size: 2.8em
    color: $accent-color
    text-shadow: 2px 2px 2px rgba(#000,0.23)