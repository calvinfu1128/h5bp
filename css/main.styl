@import 'nib'
@import 'typographic'
@import 'styl/*'

/* normalize browser CSS */
normalize-html5()
normalize-base()

rupture.base-font-size = 1em
rupture.anti-overlap = 1px 0.0625em 0.0625rem
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'

html
  font-family: brandon-grotesque, sans-serif
  color: $primary-text

h1, h2, h3, h4, h5, h6
  margin-top: 0
  margin-bottom: 0
  padding-top: 5px
  padding-bottom: 5px

li
  list-style: none
  display: inline-block

hr
  border-color: $divider-color

.align-left
  position: relative
  padding-left: 16px

.container
  padding-left: 16px
  padding-right: 16px
  margin-left: auto
  margin-right: auto

.navbar
  background: $dark-primary-color
  color: $text-color
  height: 4.8em
  width: 100%
  display: flex
  z-index: 999

.logo-area
  font-family: Voga-Medium
  font-size: 3.7em
  letter-spacing: 0.07em
  fb(row,1,flex-start,center)
  width: 50%
  position: relative

.menu
  fb(row,2,flex-end,center)
  width: 50%
  position: relative

.menu-normal
  position: relative
  right: 16px
  li
    margin-left: 3em
  +below('s')
    hide()

.menu-mobile
  padding-right: 16px
  +above('s')
    hide()

.menu-toggle
  background: $accent-color
  box-shadow: 0 3px 10px rgba(#000, 0.23)
  width: 45px
  height: 45px
  border-radius: 50%
  display: block
  flex-direction: column
  position: relative
  border: none

  cursor: pointer
  transition: background 0.3s

.menu-toggle:focus
  outline: none

.menu-toggle span
  background: $text-color
  height: 3px
  width: 25px
  border-radius: 1px
  display: block
  position: absolute
  top: 21px
  left: 10px

.menu-toggle span:before, .menu-toggle span:after
  background: $text-color
  height: 3px
  width: 25px
  border-radius: 1px
  display: block
  position: absolute
  left: 0
  content: ''

.menu-toggle span:before
  top: -9px

.menu-toggle span:after
  bottom: -9px

.menu-toggle span
  transition: background 0 0.3s

.menu-toggle span:before, .menu-toggle span:after
  transition-duration: 0.3s, 0.3s
  transition-delay: 0.3s, 0

.menu-toggle span:before
  transition-property: top, transform

.menu-toggle span:after
  transition-property: bottom, transform

.menu-toggle.active
  background: $dark-primary-color

.menu-toggle.active span
  background: none

.menu-toggle.active span:before
  top: 0
  transform: rotate(45deg)

.menu-toggle.active span:after
  bottom: 0
  transform: rotate(-45deg)

.menu-toggle.active span:before, .menu-toggle.active span:after
  transition-delay: 0, 0.3s

.menu-mobile-items
  background: $light-primary-color
  width: 100%
  margin: 0
  padding-left: 0
  display: flex
  flex-direction: column
  display: none
  visibility: hidden
  z-index: 99
  transition: visibility 2s ease
  li
    color: $secondary-text
    width: 100%
    height: 3em
    display: flex
    align-items: center
    justify-content: center

.menu-mobile-items.show
  display: block
  visibility: visible
  transition: visibility 2s ease

main
  background: $primary-color
