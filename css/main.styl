@import 'nib'
@import 'typographic'
@import 'styl/*'

/* normalize browser CSS */
normalize-html5()
normalize-base()

/* setting for Rupture breakpoints */
rupture.base-font-size = 1em
rupture.anti-overlap = 1px 0.0625em 0.0625rem
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'

/* generic html tags CSS styles */
html
  font-family: brandon-grotesque, sans-serif
  color: $primary-text

/* remove underline style for anchors */
a
  color: $dark-primary-color
  text-decoration: none

/* reset the margins & paddings for headings */
h1, h2, h3, h4, h5, h6
  font-family: 'Lato', sans-serif
  letter-spacing: 0.037em
  margin-top: 0
  margin-bottom: 0
  padding-top: 10px
  padding-bottom: 10px

/* p tag styles */
p
  color: $secondary-text
  margin-top: 0
  margin-bottom: 0

img {
  max-width: 100%
}

/* remove dots & make inline-block for nav items display */
li
  list-style: none
  display: inline-block

hr
  border-color: $divider-color
  margin: 0
  padding: 0

/* contraint the max width of content */
.outer-wrapper
  max-width: 1600px
  margin: 0 auto
  border-left: 1px solid rgba($secondary-text, 0.3)
  border-right: 1px solid rgba($secondary-text, 0.3)

/* align content with space on the LHS */
.align-left
  position: relative
  padding-left: 16px

/* container leaving spaces on both ends */
.container
  position: relative
  padding-left: 16px
  padding-right: 16px

/* highlight text */
.highlight-text
  color: $accent-color

/* top nav bar CSS styles */
.navbar
  background: #fff
  color: $text-color
  box-shadow:  0 3px 10px rgba(#000, 0.23)
  height: 4.8em
  width: 100%
  max-width: 1600px
  display: flex
  align-items: center
  position: fixed
  z-index: 999

/* LHS of nav bar is logo-area */
.logo-area
  color: $primary-color
  font-family: Voga-Medium
  font-size: 3.7em
  letter-spacing: 0.07em
  display: flex
  order: 1
  align-items: center
  justify-content: flex-start
  width: 50%
  position: relative

.logo-png
  width: 45px
  height: 45px

/* RHS of nav bar is menu */
.menu
  letter-spacing: 0.035em
  display: flex
  order: 2
  justify-content: flex-end
  width: 50%
  position: relative

/* menu-normal only displays above 600px */
.menu-normal
  color: $dark-primary-color
  position: relative
  padding: 0
  margin-top: 0
  margin-bottom: 0
  display: flex
  justify-content: flex-end
  li
    width: 7em
    margin: 0
    display: flex
    justify-content: center
    a
      padding-top: 1.7em
      padding-bottom: 1.7em
      :hover
        color: $accent-color
  +below('s')
    hide()

/* menu-mobile only displays below 600px */
.menu-mobile
  padding-right: 16px
  +above('s')
    hide()

/* button for toggling mobile menu items */
.menu-toggle
  background: $accent-color
  box-shadow: 0 3px 10px rgba(#000, 0.23)
  width: 40px
  height: 40px
  border-radius: 50%
  display: flex
  position: relative
  border: none
  cursor: pointer
  transition: background 0.3s

.menu-toggle:focus
  outline: none

/* the bars for the menu toggle button */
.menu-toggle span
  background: $text-color
  height: 2px
  width: 22px
  border-radius: 1px
  display: block
  position: absolute
  top: 19px
  left: 9px

.menu-toggle span:before, .menu-toggle span:after
  background: $text-color
  height: 2px
  width: 22px
  border-radius: 1px
  display: block
  position: absolute
  left: 0
  content: ''

.menu-toggle span:before
  top: -8px

.menu-toggle span:after
  bottom: -8px

/* transition effects for the menu toggle button */
.menu-toggle span
  transition: background 0 0.3s

.menu-toggle span:before, .menu-toggle span:after
  transition-duration: 0.3s, 0.3s
  transition-delay: 0.3s, 0

.menu-toggle span:before
  transition-property: top, transform

.menu-toggle span:after
  transition-property: bottom, transform

.menu-toggle.active
  background: #fff

.menu-toggle.active span
  background: none

.menu-toggle.active span:before
  background: $accent-color
  top: 0
  transform: rotate(45deg)

.menu-toggle.active span:after
  background: $accent-color
  bottom: 0
  transform: rotate(-45deg)

.menu-toggle.active span:before, .menu-toggle.active span:after
  transition-delay: 0, 0.3s

/* mobile menu items CSS styles */
.menu-mobile-items
  background: rgba($dark-primary-color, 0.93)
  width: 200%
  margin: 0
  padding-left: 0
  display: flex
  flex-direction: column
  display: none
  visibility: hidden
  z-index: 99
  transition: visibility 2s ease
  position: absolute
  top: 3.8em
  left: -100%
  li
    color: $accent-color
    height: 3em
    display: flex
    align-items: center
    justify-content: center

.menu-mobile-items.show
  display: block
  visibility: visible
  transition: visibility 2s ease

main
  position: relative
  top: 4.8em

.jumbotron
  width: 100%
  height: 23em
  background: url("../img/jumbotron.png") bottom center/640px no-repeat, url("../img/background.png") repeat
  background-color: $primary-color
  display: flex
  align-items: flex-start
  justify-content: center
  h1
    padding-top: 0.8em
    font-size: 2.3em
    letter-spacing: 0.05em
    color: #fff
    text-shadow: 2px 2px 2px rgba(#000,0.3)
    +below('s')
      font-size: 1.8em

.about
  background: #fff
  width: 100%
  .container
    display: flex
    align-items: center
    justify-content: center
    flex-wrap: wrap
  .about-headline
    width: 100%
    display: flex
    justify-content: center
  .about-content
    background: $primary-color
    border: 7px solid $dark-primary-color
    width: 11em
    height: 11em
    border-radius: 50%
    display: flex
    align-items: center
    justify-content: center
    div
      height: 100%
      display: flex
      align-items: center
      justify-content: center
      h3
        color: $accent-color
.services
  background: #e91e63
  color: #fff
  width: 100%

footer
  background: #607d8b
  color: #fff
  width: 100%
  height: 17em
  position: relative
  top: 4.8em
